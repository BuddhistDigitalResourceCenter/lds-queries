#QueryScope=Topic
#QueryReturnType=Table
#QueryResults=the list (Id, topic names) of all topics
#QueryParams=NONE
#QueryUrl=/Topic_list

#output.?ID.type=URI
#output.?ID.desc=the resource URI
#output.?topic_Names.type=string
#output.?topic_Names.desc=a list of names for the topic (separated by '||')

SELECT DISTINCT ?ID
(GROUP_CONCAT(DISTINCT ?topic;   SEPARATOR=" || ") AS ?topic_Names)
where{

    ?ID a :Topic .
    ?ID skos:prefLabel ?topic .
}
GROUP by ?ID
order by ?ID
